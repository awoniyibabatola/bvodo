{
  "name": "corporate-travel-platform",
  "version": "1.0.0",
  "description": "Corporate Travel Platform for Africa",
  "private": true,
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "prisma:generate": "npm run db:generate --prefix backend",
    "prisma:migrate": "npm run db:migrate --prefix backend",
    "prisma:studio": "npm run db:studio --prefix backend",
    "prisma:push": "cd backend && npx prisma db push"
  },
  "keywords": [
    "travel",
    "booking",
    "corporate",
    "africa"
  ],
  "author": "Your Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
